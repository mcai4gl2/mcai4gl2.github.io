{
  "name": "Hugo Blog",
  "dockerFile": "Dockerfile",
  "context": "..",
  "appPort": 1313,
  "extensions": [
    "budparr.language-hugo-vscode",
    "ms-vscode.vscode-json",
    "ms-python.python"
  ],
  "settings": {
    "files.associations": {
      "*.toml": "toml"
    },
    "html.format.indentInnerHtml": true,
    "html.format.wrapAttributes": "auto",
    "python.defaultInterpreterPath": "/usr/bin/python3"
  },
  "forwardPorts": [1313],
  "postCreateCommand": "git submodule update --init --recursive && pip3 install -e .",
  "postStartCommand": "hugo server --bind 0.0.0.0 --port 1313 --buildDrafts --buildFuture",
  "mounts": [
    "source=${localWorkspaceFolder},target=/src,type=bind"
  ],
  "remoteUser": "vscode"
}